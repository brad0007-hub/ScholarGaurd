{
  "manifest_version": 3,
  "name": "ScholarGuard",
  "description": "Separating Human Insight from Machine Output on Google Scholar.",
  "version": "0.1.0",
  "action": {
    "default_title": "ScholarGuard",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://scholar.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}